{
    "require": {
        "bshaffer/oauth2-server-php": "^1.12"
    },
    "require-dev": {
        "johnpbloch/wordpress": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "OpenIDConnectServer\\": "src/"
        },
        "exclude-from-classmap": ["vendor/bshaffer/oauth2-server-php/src/OAuth2/OpenID/Controller/AuthorizeController.php"],
        "files": ["src/OAuth2/OpenID/Controller/AuthorizeController.php"]
    },
    "config": {
        "allow-plugins": {
            "johnpbloch/wordpress-core-installer": false
        }
    }
}
